{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "addressSpaceAzureRegionR1": {
            "type": "string",
            "metadata": {
                "description": "The address space used in the primary Azure region"
            }
        },
        "addressSpaceAzureRegionR2": {
            "type": "string",
            "metadata": {
                "description": "The address space used in the secondary Azure region"
            },
            "defaultValue": "None"
        },
        "mediationVnetNameR1": {
            "type": "string",
            "metadata": {
                "description": "The name of the mediation vnet in the primary region"
            }
        },
        "mediationVnetNameR2": {
            "type": "string",
            "metadata": {
                "description": "The name of the mediation vnet in the secondary region"
            },
            "defaultValue": "None"
        },
        "regionSetting": {
            "type": "string",
            "metadata": {
                "description": "Set to either single for single region or multi for multi-region deployment"
            }
        },
        "rgNameMediationR2": {
            "type": "string",
            "metadata": {
                "description": "The name of the mediation resource group in the secondary region"
            },
            "defaultValue": "None"
        },
        "vhubDefaultRouteTableLabelName": {
            "type": "string",
            "metadata": {
                "description": "The label associated with the defaultRouteTable in the vhubs"
            }
        },
        "vhubDefaultRouteTableName": {
            "type": "string",
            "metadata": {
                "description": "The name of the defaultRouteTable in the VWAN hubs"
            }
        },
        "vhubMediationRouteTableLabelName": {
            "type": "string",
            "metadata": {
                "description": "The label associated with the mediation route table in the vhubs"
            }
        },
        "vhubMediationRouteTableName": {
            "type": "string",
            "metadata": {
                "description": "The name of the mediation route table in the VWAN hubs"
            }
        },
        "vwanHubNameR1": {
            "type": "string",
            "metadata": {
                "description": "The name of the VWAN hub in the primary region"
            }
        },
        "vwanHubNameR2": {
            "type": "string",
            "metadata": {
                "description": "The name of the VWAN hub in the secondary region"
            },
            "defaultValue": "None"
        }
    },
    "variables": {
        "_apiVersionNetworks": "2022-05-01",
        "_apiVersionResources": "2020-06-01",
        "deploymentNameSingleRegion": "deploy-single-region-routes",
        "deploymentNameMultiRegion": "deploy-multi-region-routes"
    },
    "resources": [
        {
            "condition": "[equals(parameters('regionSetting'), 'single')]",
            "name": "[variables('deploymentNameSingleRegion')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('_apiVersionResources')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "name": "[concat(parameters('vwanHubNameR1'),'/',parameters('vhubDefaultRouteTableName'))]",
                            "type": "Microsoft.Network/virtualHubs/hubRouteTables",
                            "apiVersion": "[variables('_apiVersionNetworks')]",
                            "properties": {
                                "labels": [
                                    "[parameters('vhubDefaultRouteTableLabelName')]"
                                ],
                                "routes": [
                                    {
                                        "name": "azureregion1",
                                        "destinationType": "CIDR",
                                        "destinations": [
                                            "[parameters('addressSpaceAzureRegionR1')]"
                                        ],
                                        "nextHopType": "ResourceId",
                                        "nextHop": "[resourceId('Microsoft.Network/virtualHubs/hubVirtualNetworkConnections', parameters('vwanHubNameR1'), concat(parameters('mediationVnetNameR1'), '-conn'))]"
                                    }
                                ]
                            }
                        },
                        {
                            "name": "[concat(parameters('vwanHubNameR2'),'/',parameters('vhubDefaultRouteTableName'))]",
                            "type": "Microsoft.Network/virtualHubs/hubRouteTables",
                            "apiVersion": "[variables('_apiVersionNetworks')]",
                            "dependsOn": [
                                "[resourceId('Microsoft.Network/virtualHubs/hubRouteTables', parameters('vwanHubNameR1'), parameters('vhubDefaultRouteTableName'))]"
                            ],
                            "properties": {
                                "labels": [
                                    "[parameters('vhubDefaultRouteTableLabelName')]"
                                ],
                                "routes": [
                                    {
                                        "name": "azureregion1",
                                        "destinationType": "CIDR",
                                        "destinations": [
                                            "[parameters('addressSpaceAzureRegionR1')]"
                                        ],
                                        "nextHopType": "ResourceId",
                                        "nextHop": "[resourceId('Microsoft.Network/virtualHubs/hubVirtualNetworkConnections', parameters('vwanHubNameR1'), concat(parameters('mediationVnetNameR1'), '-conn'))]"
                                    }
                                ]
                            }
                        },
                        {
                            "name": "[concat(parameters('vwanHubNameR1'),'/',parameters('vhubMediationRouteTableName'))]",
                            "type": "Microsoft.Network/virtualHubs/hubRouteTables",
                            "apiVersion": "[variables('_apiVersionNetworks')]",
                            "dependsOn": [
                                "[resourceId('Microsoft.Network/virtualHubs/hubRouteTables', parameters('vwanHubNameR2'), parameters('vhubDefaultRouteTableName'))]"
                            ],
                            "properties": {
                                "labels": [
                                    "[parameters('vhubMediationRouteTableLabelName')]"
                                ],
                                "routes": [
                                    {
                                        "name": "azureregion1",
                                        "destinationType": "CIDR",
                                        "destinations": [
                                            "[parameters('addressSpaceAzureRegionR1')]"
                                        ],
                                        "nextHopType": "ResourceId",
                                        "nextHop": "[resourceId('Microsoft.Network/virtualHubs/hubVirtualNetworkConnections', parameters('vwanHubNameR1'), concat(parameters('mediationVnetNameR1'), '-conn'))]"
                                    }
                                ]
                            }
                        },
                        {
                            "name": "[concat(parameters('vwanHubNameR2'),'/',parameters('vhubMediationRouteTableName'))]",
                            "type": "Microsoft.Network/virtualHubs/hubRouteTables",
                            "apiVersion": "[variables('_apiVersionNetworks')]",
                            "dependsOn": [
                                "[resourceId('Microsoft.Network/virtualHubs/hubRouteTables', parameters('vwanHubNameR1'), parameters('vhubMediationRouteTableName'))]"
                            ],
                            "properties": {
                                "labels": [
                                    "[parameters('vhubMediationRouteTableLabelName')]"
                                ],
                                "routes": [
                                    {
                                        "name": "azureregion1",
                                        "destinationType": "CIDR",
                                        "destinations": [
                                            "[parameters('addressSpaceAzureRegionR1')]"
                                        ],
                                        "nextHopType": "ResourceId",
                                        "nextHop": "[resourceId('Microsoft.Network/virtualHubs/hubVirtualNetworkConnections', parameters('vwanHubNameR1'), concat(parameters('mediationVnetNameR1'), '-conn'))]"
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        },
        {
            "condition": "[equals(parameters('regionSetting'), 'multi')]",
            "name": "[variables('deploymentNameMultiRegion')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('_apiVersionResources')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "name": "[concat(parameters('vwanHubNameR1'),'/',parameters('vhubDefaultRouteTableName'))]",
                            "type": "Microsoft.Network/virtualHubs/hubRouteTables",
                            "apiVersion": "[variables('_apiVersionNetworks')]",
                            "properties": {
                                "labels": [
                                    "[parameters('vhubDefaultRouteTableLabelName')]"
                                ],
                                "routes": [
                                    {
                                        "name": "azureregion1",
                                        "destinationType": "CIDR",
                                        "destinations": [
                                            "[parameters('addressSpaceAzureRegionR1')]"
                                        ],
                                        "nextHopType": "ResourceId",
                                        "nextHop": "[resourceId('Microsoft.Network/virtualHubs/hubVirtualNetworkConnections', parameters('vwanHubNameR1'), concat(parameters('mediationVnetNameR1'), '-conn'))]"
                                    },
                                    {
                                        "name": "azureregion2",
                                        "destinationType": "CIDR",
                                        "destinations": [
                                            "[parameters('addressSpaceAzureRegionR2')]"
                                        ],
                                        "nextHopType": "ResourceId",
                                        "nextHop": "[resourceId(parameters('rgNameMediationR2'),'Microsoft.Network/virtualHubs/hubVirtualNetworkConnections', parameters('vwanHubNameR2'), concat(parameters('mediationVnetNameR2'), '-conn'))]"
                                    }
                                ]
                            }
                        },
                        {
                            "name": "[concat(parameters('vwanHubNameR2'),'/',parameters('vhubDefaultRouteTableName'))]",
                            "type": "Microsoft.Network/virtualHubs/hubRouteTables",
                            "apiVersion": "[variables('_apiVersionNetworks')]",
                            "dependsOn": [
                                "[resourceId('Microsoft.Network/virtualHubs/hubRouteTables', parameters('vwanHubNameR1'), parameters('vhubDefaultRouteTableName'))]"
                            ],
                            "properties": {
                                "labels": [
                                    "[parameters('vhubDefaultRouteTableLabelName')]"
                                ],
                                "routes": [
                                    {
                                        "name": "azureregion1",
                                        "destinationType": "CIDR",
                                        "destinations": [
                                            "[parameters('addressSpaceAzureRegionR1')]"
                                        ],
                                        "nextHopType": "ResourceId",
                                        "nextHop": "[resourceId('Microsoft.Network/virtualHubs/hubVirtualNetworkConnections', parameters('vwanHubNameR1'), concat(parameters('mediationVnetNameR1'), '-conn'))]"
                                    },
                                    {
                                        "name": "azureregion2",
                                        "destinationType": "CIDR",
                                        "destinations": [
                                            "[parameters('addressSpaceAzureRegionR2')]"
                                        ],
                                        "nextHopType": "ResourceId",
                                        "nextHop": "[resourceId(parameters('rgNameMediationR2'),'Microsoft.Network/virtualHubs/hubVirtualNetworkConnections', parameters('vwanHubNameR2'), concat(parameters('mediationVnetNameR2'), '-conn'))]"
                                    }
                                ]
                            }
                        },
                        {
                            "name": "[concat(parameters('vwanHubNameR1'),'/',parameters('vhubMediationRouteTableName'))]",
                            "type": "Microsoft.Network/virtualHubs/hubRouteTables",
                            "apiVersion": "[variables('_apiVersionNetworks')]",
                            "dependsOn": [
                                "[resourceId('Microsoft.Network/virtualHubs/hubRouteTables', parameters('vwanHubNameR2'), parameters('vhubDefaultRouteTableName'))]"
                            ],
                            "properties": {
                                "labels": [
                                    "[parameters('vhubMediationRouteTableLabelName')]"
                                ],
                                "routes": [
                                    {
                                        "name": "azureregion1",
                                        "destinationType": "CIDR",
                                        "destinations": [
                                            "[parameters('addressSpaceAzureRegionR1')]"
                                        ],
                                        "nextHopType": "ResourceId",
                                        "nextHop": "[resourceId('Microsoft.Network/virtualHubs/hubVirtualNetworkConnections', parameters('vwanHubNameR1'), concat(parameters('mediationVnetNameR1'), '-conn'))]"
                                    },
                                    {
                                        "name": "azureregion2",
                                        "destinationType": "CIDR",
                                        "destinations": [
                                            "[parameters('addressSpaceAzureRegionR2')]"
                                        ],
                                        "nextHopType": "ResourceId",
                                        "nextHop": "[resourceId(parameters('rgNameMediationR2'),'Microsoft.Network/virtualHubs/hubVirtualNetworkConnections', parameters('vwanHubNameR2'), concat(parameters('mediationVnetNameR2'), '-conn'))]"
                                    }
                                ]
                            }
                        },
                        {
                            "name": "[concat(parameters('vwanHubNameR2'),'/',parameters('vhubMediationRouteTableName'))]",
                            "type": "Microsoft.Network/virtualHubs/hubRouteTables",
                            "apiVersion": "[variables('_apiVersionNetworks')]",
                            "dependsOn": [
                                "[resourceId('Microsoft.Network/virtualHubs/hubRouteTables', parameters('vwanHubNameR1'), parameters('vhubMediationRouteTableName'))]"
                            ],
                            "properties": {
                                "labels": [
                                    "[parameters('vhubMediationRouteTableLabelName')]"
                                ],
                                "routes": [
                                    {
                                        "name": "azureregion1",
                                        "destinationType": "CIDR",
                                        "destinations": [
                                            "[parameters('addressSpaceAzureRegionR1')]"
                                        ],
                                        "nextHopType": "ResourceId",
                                        "nextHop": "[resourceId('Microsoft.Network/virtualHubs/hubVirtualNetworkConnections', parameters('vwanHubNameR1'), concat(parameters('mediationVnetNameR1'), '-conn'))]"
                                    },
                                    {
                                        "name": "azureregion2",
                                        "destinationType": "CIDR",
                                        "destinations": [
                                            "[parameters('addressSpaceAzureRegionR2')]"
                                        ],
                                        "nextHopType": "ResourceId",
                                        "nextHop": "[resourceId(parameters('rgNameMediationR2'),'Microsoft.Network/virtualHubs/hubVirtualNetworkConnections', parameters('vwanHubNameR2'), concat(parameters('mediationVnetNameR2'), '-conn'))]"
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {
    }
}
