{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "keyVaultAdmin": {
            "type": "string",
            "metadata": {
                "description": "The object ID of the user or group who will have full permissons on Azure Key Vault"
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "The location the VWAN resource and VWAN hub are deployed."
            },
            "allowedValues": [
                "centralus",
                "eastus",
                "eastus2",
                "southcentralus",
                "westus",
                "westus2"
            ]
        },
        "tags": {
            "type": "object",
            "metadata": {
                "description": "The tags that wil be associated to the resources"
            },
            "defaultValue": {
                "environment": "lab"
            }
        },
        "transitSubscriptionId": {
            "type": "string",
            "metadata": {
                "description": "The id of the subscription where the Transit resource group and resources will be deployed"
            },
            "defaultValue": "[subscription().subscriptionId]"
        },
        "trustedIp": {
            "type": "string",
            "metadata": {
                "description": "The IP address to trust for incoming SSH sessions to VMs"
            },
            "defaultValue": "[subscription().subscriptionId]"
        },
        "uniqueData": {
            "type": "string",
            "metadata": {
                "description": "Creates a new GUID to create uniqueness for resources"
            },
            "defaultValue": "[substring(newGuid(),0,8)]"
        },
        "workload1SubscriptionId": {
            "type": "string",
            "metadata": {
                "description": "The id of the subscription where the Workload 1 resource group and resources will be deployed"
            },
            "defaultValue": "[subscription().subscriptionId]"
        },
        "workload2SubscriptionId": {
            "type": "string",
            "metadata": {
                "description": "The id of the subscription where the Workload 2 resource group and resources will be deployed"
            },
            "defaultValue": "[subscription().subscriptionId]"
        },
        "vmAdminUsername": {
            "type": "string",
            "metadata": {
                "description": "Administrator name for VMs that are created"
            }
        },
        "vmAdminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the VMs that are created"
            }
        }
    },
    "variables": {
        "_apiVersionResources": "2020-06-01",
        "addressSpaceAzureRegion": "10.0.0.0/13",
        "addressSpaceOnPremises": "192.168.0.0/16",
        "loadBalancerInnerIp": "10.1.0.100",
        "nvaAsn": "65001",
        "nva1IpInnerSubnet": "10.1.0.10",
        "nva2IpInnerSubnet": "10.1.0.20",
        "nva1IpOuterSubnet": "10.1.129.10",
        "nva2IpOuterSubnet": "10.1.129.20",
        "rgDeploymentNameTransit": "[concat('deploy-tr',parameters('location'),parameters('uniqueData'))]",
        "rgDeploymentNameVwan": "[concat('deploy-vwan',parameters('uniqueData'))]",
        "rgDeploymentNameVwanHub": "[concat('deploy-vwanh',parameters('location'),parameters('uniqueData'))]",
        "rgDeploymentNameWorkload1": "[concat('deploy-wl1',parameters('location'),parameters('uniqueData'))]",
        "rgDeploymentNameWorkload2": "[concat('deploy-wl2',parameters('location'),parameters('uniqueData'))]",
        "rgNameTransit": "[concat('rg-tr-',parameters('location'),parameters('uniqueData'))]",
        "rgNameWorkload1": "[concat('rg-wl1-',parameters('location'),parameters('uniqueData'))]",
        "rgNameWorkload2": "[concat('rg-wl2-',parameters('location'),parameters('uniqueData'))]",
        "subDeploymentNameTransit": "[concat('deploy-tr-sub',parameters('location'),parameters('uniqueData'))]",
        "subDeploymentNameWorkload1": "[concat('deploy-wl1-sub',parameters('location'),parameters('uniqueData'))]",
        "subDeploymentNameWorkload2": "[concat('deploy-wl2-sub',parameters('location'),parameters('uniqueData'))]",
        "templateFileTransit": "[concat(variables('templateUriTransit'), 'deploy-transit.json')]",
        "templateFileVwan": "[concat(variables('templateUriTransit'), 'deploy-vwan.json')]",
        "templateFileVwanHub": "[concat(variables('templateUriTransit'), 'deploy-vwan-hub.json')]",
        "templateFileWorkload": "[concat(variables('templateUriWorkload'), 'deploy-workload.json')]",
        "templateUriTransit": "[concat(uri(deployment().properties.templateLink.uri,'templates/core/transit/'))]",
        "templateUriWorkload": "[concat(uri(deployment().properties.templateLink.uri,'templates/core/workload/'))]",
        "vnetCidrTransit": "10.1.0.0/16",
        "vnetCidrWorkload1": "10.2.0.0/16",
        "vnetCidrWorkload2": "10.3.0.0/16",
        "vnetSubnetCidrTransitNvaInner": "10.1.0.0/24",
        "vnetSubnetCidrTransitNvaOuter": "10.1.129.0/24",
        "vnetSubnetCidrTransitNvaInnerGateway": "10.1.0.1",
        "vnetSubnetCidrTransitNvaOuterGateway": "10.1.129.1",
        "vnetSubnetCidrWorkload1App": "10.2.0.0/24",
        "vnetSubnetCidrWorkload2App": "10.3.0.0/24",
        "vwanHubCidr": "10.0.0.0/16"
    },
    "resources": [
        {
            "name": "[variables('subDeploymentNameTransit')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('_apiVersionresources')]",
            "location": "[parameters('location')]",
            "subscriptionId": "[parameters('transitSubscriptionId')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "name": "[variables('rgNameTransit')]",
                            "type": "Microsoft.Resources/resourceGroups",
                            "apiVersion": "[variables('_apiVersionresources')]",
                            "location": "[parameters('location')]",
                            "tags": "[parameters('tags')]",
                            "properties": {
                            }
                        }
                    ]
                }
            }
        },
        {
            "name": "[variables('subDeploymentNameWorkload1')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('_apiVersionresources')]",
            "location": "[parameters('location')]",
            "subscriptionId": "[parameters('workload1SubscriptionId')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "name": "[variables('rgNameWorkload1')]",
                            "type": "Microsoft.Resources/resourceGroups",
                            "apiVersion": "[variables('_apiVersionresources')]",
                            "location": "[parameters('location')]",
                            "tags": "[parameters('tags')]",
                            "properties": {
                            }
                        }
                    ]
                }
            }
        },
        {
            "name": "[variables('subDeploymentNameWorkload2')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('_apiVersionresources')]",
            "location": "[parameters('location')]",
            "subscriptionId": "[parameters('workload2SubscriptionId')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "name": "[variables('rgNameWorkload2')]",
                            "type": "Microsoft.Resources/resourceGroups",
                            "apiVersion": "[variables('_apiVersionresources')]",
                            "location": "[parameters('location')]",
                            "tags": "[parameters('tags')]",
                            "properties": {
                            }
                        }
                    ]
                }
            }
        },
        {
            "name": "[variables('rgDeploymentNameVwan')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('_apiVersionresources')]",
            "subscriptionId": "[parameters('transitSubscriptionId')]",
            "resourceGroup": "[variables('rgNameTransit')]",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', variables('subDeploymentNameTransit'))]",
                "[concat('Microsoft.Resources/deployments/', variables('subDeploymentNameWorkload1'))]",
                "[concat('Microsoft.Resources/deployments/', variables('subDeploymentNameWorkload2'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "tags": {
                        "value": "[parameters('tags')]"
                    },
                    "uniqueData": {
                        "value": "[parameters('uniqueData')]"
                    }
                },
                "templateLink": {
                    "uri": "[variables('templateFileVwan')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "name": "[variables('rgDeploymentNameVwanHub')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('_apiVersionresources')]",
            "subscriptionId": "[parameters('transitSubscriptionId')]",
            "resourceGroup": "[variables('rgNameTransit')]",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', variables('rgDeploymentNameVwan'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "tags": {
                        "value": "[parameters('tags')]"
                    },
                    "uniqueData": {
                        "value": "[parameters('uniqueData')]"
                    },
                    "vwanHubCidr": {
                        "value": "[variables('vwanHubCidr')]"
                    },
                    "vwanResourceId": {
                        "value": "[reference(variables('rgDeploymentNameVwan')).outputs.vwanResourceId.value]"
                    }
                },
                "templateLink": {
                    "uri": "[variables('templateFileVwanHub')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "name": "[variables('rgDeploymentNameTransit')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('_apiVersionresources')]",
            "subscriptionId": "[parameters('transitSubscriptionId')]",
            "resourceGroup": "[variables('rgNameTransit')]",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', variables('rgDeploymentNameVwanHub'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "addressSpaceAzureRegion": {
                        "value": "[variables('addressSpaceAzureRegion')]"
                    },
                    "addressSpaceOnPremises": {
                        "value": "[variables('addressSpaceOnPremises')]"
                    },
                    "keyVaultAdmin": {
                        "value": "[parameters('keyVaultAdmin')]"
                    },
                    "loadBalancerInnerIp": {
                        "value": "[variables('loadBalancerInnerIp')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "nvaAsn": {
                        "value": "[variables('nvaAsn')]"
                    },
                    "nva1IpInnerSubnet": {
                        "value": "[variables('nva1IpInnerSubnet')]"
                    },
                    "nva2IpInnerSubnet": {
                        "value": "[variables('nva2IpInnerSubnet')]"
                    },
                    "nva1IpOuterSubnet": {
                        "value": "[variables('nva1IpOuterSubnet')]"
                    },
                    "nva2IpOuterSubnet": {
                        "value": "[variables('nva2IpOuterSubnet')]"
                    },
                    "tags": {
                        "value": "[parameters('tags')]"
                    },
                    "trustedIp": {
                        "value": "[parameters('trustedIp')]"
                    },
                    "uniqueData": {
                        "value": "[parameters('uniqueData')]"
                    },
                    "vmAdminPassword": {
                        "value": "[parameters('vmAdminPassword')]"
                    },
                    "vmAdminUsername": {
                        "value": "[parameters('vmAdminUsername')]"
                    },
                    "vnetCidr": {
                        "value": "[variables('vnetCidrTransit')]"
                    },
                    "vnetCidrWorkload1": {
                        "value": "[variables('vnetCidrWorkload1')]"
                    },
                    "vnetCidrWorkload2": {
                        "value": "[variables('vnetCidrWorkload2')]"
                    },
                    "vnetSubnetCidrInner": {
                        "value": "[variables('vnetSubnetCidrTransitNvaInner')]"
                    },
                    "vnetSubnetCidrInnerGatewayIp": {
                        "value": "[variables('vnetSubnetCidrTransitNvaInnerGateway')]"
                    },
                    "vnetSubnetCidrOuter": {
                        "value": "[variables('vnetSubnetCidrTransitNvaOuter')]"
                    },
                    "vnetSubnetCidrOuterGatewayIp": {
                        "value": "[variables('vnetSubnetCidrTransitNvaOuterGateway')]"
                    },
                    "vwanHubName": {
                        "value": "[reference(variables('rgDeploymentNameVwanHub')).outputs.vwanHubName.value]"
                    }
                },
                "templateLink": {
                    "uri": "[variables('templateFileTransit')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "name": "[variables('rgDeploymentNameWorkload1')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('_apiVersionresources')]",
            "subscriptionId": "[parameters('workload1SubscriptionId')]",
            "resourceGroup": "[variables('rgNameWorkload1')]",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', variables('subDeploymentNameWorkload1'))]",
                "[concat('Microsoft.Resources/deployments/', variables('rgDeploymentNameTransit'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "lawResourceId": {
                        "value": "[reference(variables('rgDeploymentNameTransit')).outputs.lawResourceId.value]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "rgNameTransit": {
                        "value": "[variables('rgNameTransit')]"
                    },
                    "subIdTransit": {
                        "value": "[parameters('transitSubscriptionId')]"
                    },
                    "trustedIp": {
                        "value": "[parameters('trustedIp')]"
                    },
                    "vmAdminPassword": {
                        "value": "[parameters('vmAdminPassword')]"
                    },
                    "vmAdminUsername": {
                        "value": "[parameters('vmAdminUsername')]"
                    },
                    "vnetCidr": {
                        "value": "[variables('vnetCidrWorkload1')]"
                    },
                    "vnetSubnetCidrApp": {
                        "value": "[variables('vnetSubnetCidrWorkload1App')]"
                    },
                    "vwanHubName": {
                        "value": "[reference(variables('rgDeploymentNameVwanHub')).outputs.vwanHubName.value]"
                    },
                    "workloadNumber": {
                        "value": "1"
                    },
                    "tags": {
                        "value": "[parameters('tags')]"
                    },
                    "uniqueData": {
                        "value": "[parameters('uniqueData')]"
                    }
                },
                "templateLink": {
                    "uri": "[variables('templateFileWorkload')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "name": "[variables('rgDeploymentNameWorkload2')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('_apiVersionresources')]",
            "subscriptionId": "[parameters('workload1SubscriptionId')]",
            "resourceGroup": "[variables('rgNameWorkload1')]",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', variables('subDeploymentNameWorkload2'))]",
                "[concat('Microsoft.Resources/deployments/', variables('rgDeploymentNameWorkload1'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "lawResourceId": {
                        "value": "[reference(variables('rgDeploymentNameTransit')).outputs.lawResourceId.value]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "rgNameTransit": {
                        "value": "[variables('rgNameTransit')]"
                    },
                    "subIdTransit": {
                        "value": "[parameters('transitSubscriptionId')]"
                    },
                    "trustedIp": {
                        "value": "[parameters('trustedIp')]"
                    },
                    "vmAdminPassword": {
                        "value": "[parameters('vmAdminPassword')]"
                    },
                    "vmAdminUsername": {
                        "value": "[parameters('vmAdminUsername')]"
                    },
                    "vnetCidrWorkload": {
                        "value": "[variables('vnetCidrWorkload2')]"
                    },
                    "vnetSubnetCidrWorkloadApp": {
                        "value": "[variables('vnetSubnetCidrWorkload2App')]"
                    },
                    "vwanHubNameR1": {
                        "value": "[reference(variables('rgDeploymentNameVwanHub')).outputs.vwanHubName.value]"
                    },
                    "workloadNumber": {
                        "value": "2"
                    },
                    "tags": {
                        "value": "[parameters('tags')]"
                    },
                    "uniqueData": {
                        "value": "[parameters('uniqueData')]"
                    }
                },
                "templateLink": {
                    "uri": "[variables('templateFileWorkload')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        }
    ],
    "outputs": {
    }
}
